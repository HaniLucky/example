<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xxx.covet.dao.UserMapper">
	<resultMap type="com.xxx.covet.pojo.User" id="userResultMap"></resultMap>
	<select id="queryAllUsers" resultMap="userResultMap">
		SELECT
			username,password,age,name,role
		FROM user
	</select>
	
	<select id="queryUser" parameterType="com.xxx.covet.pojo.User" resultMap="userResultMap">
		SELECT
			username,password,age,name,role
		FROM user WHERE 1=1 AND username = #{username} AND password = #{password} LIMIT 1
	</select>
</mapper>