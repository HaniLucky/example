<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.my.project.mapper.DepMapper">
    <resultMap id="depResultMap" type="com.example.my.project.vo.Dep">
        <result property="uuid" column="UUID"></result>
        <result property="name" column="NAME"></result>
        <result property="tele" column="TELE"></result>
    </resultMap>
    <select id="queryDepList" parameterType="java.util.Map" resultMap="depResultMap">
        SELECT UUID,NAME,TELE FROM DEP
        <where>
            1=1
            <if test="name != null and name != ''">
                AND NAME = #{name}
            </if>
            <if test="tele != null and tele != ''">
                AND TELE = #{tele}
            </if>
        </where>
    </select>

    <!-- useGeneratedKeys="true" keyProperty="uuid"  用来返回主键 -->
    <insert id="add" parameterType="com.example.my.project.vo.Dep" useGeneratedKeys="true" keyProperty="uuid">
      INSERT INTO DEP (NAME,TELE) VALUES (#{name},#{tele})
    </insert>

    <delete id="delete" parameterType="java.lang.String">
        DELETE FROM DEP WHERE  uuid = #{id}
    </delete>

    <select id="getDepById" parameterType="java.lang.String" resultMap="depResultMap">
        SELECT UUID,NAME ,TELE FROM DEP WHERE  uuid = #{id}
    </select>

    <update id="updateDepById" parameterType="com.example.my.project.vo.Dep" >
        UPDATE DEP SET NAME=#{name},TELE=#{tele} WHERE UUID = #{uuid}
    </update>
</mapper>